{
  "name": "web-portfolio",
  "version": "1.0.0",
  "description": "web portfolio",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run wait-for-postgres && npm run migration:up && next dev",
    "docker:up": "docker compose -f infra/compose.yml up -d",
    "docker:stop": "docker compose -f infra/compose.yml stop",
    "docker:down": "docker compose -f infra/compose.yml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "npm run docker:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watch --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "Web-Portfolio"
  },
  "keywords": [
    "web",
    "portfolio"
  ],
  "author": "Gabriel Gobbo Ara√∫jo Valera",
  "license": "MIT",
  "dependencies": {
    "@commitlint/config-conventional": "^19.8.0",
    "async-retry": "^1.3.3",
    "commitizen": "^2.7.1",
    "commitlint": "^19.8.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^11.0.6",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "jest-environment-jsdom": "^29.7.0",
    "next": "^15.1.2",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.13.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.10.2",
    "@types/react": "19.0.1",
    "babel-jest": "^29.7.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "9.22.0",
    "eslint-config-next": "15.2.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "node-fetch": "^2.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
