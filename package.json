{
  "name": "web-portfolio",
  "version": "1.0.0",
  "description": "web portfolio",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run postgres:wait:database && npm run migrations:up && next dev",
    "test": "npm run docker:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run docker:stop",
    "test:watch": "jest --watch --runInBand",
    "docker:up": "docker compose -f infra/compose.yml up -d",
    "docker:stop": "docker compose -f infra/compose.yml stop",
    "docker:down": "docker compose -f infra/compose.yml down",
    "postgres:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m infra/migrations create",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "Web-Portfolio"
  },
  "keywords": [
    "web",
    "portfolio"
  ],
  "author": "Gabriel Gobbo Ara√∫jo Valera",
  "license": "MIT",
  "dependencies": {
    "@commitlint/config-conventional": "19.8.0",
    "async-retry": "1.3.3",
    "commitizen": "4.3.1",
    "commitlint": "19.8.0",
    "concurrently": "9.1.2",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-jest": "28.11.0",
    "jest-environment-jsdom": "29.7.0",
    "next": "15.2.3",
    "node-pg-migrate": "7.9.1",
    "pg": "8.14.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "text-encoding": "0.7.0"
  },
  "devDependencies": {
    "@babel/preset-env": "7.26.9",
    "@babel/preset-typescript": "7.26.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.13",
    "@types/react": "19.0.12",
    "babel-jest": "29.7.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.23.0",
    "eslint-config-next": "15.2.3",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-fetch-mock": "3.0.3",
    "node-fetch": "3.3.2",
    "prettier": "3.5.3",
    "ts-jest": "29.3.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
